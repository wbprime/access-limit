<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration scan="true" scanPeriod="3 seconds">
    <appender name="STDOUT_LOG" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight(%-5level) - %msg%n</pattern>-->
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}] %thread - %msg%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="com.bj58.spat.wmedia" level="DEBUG" />-->

    <!--<logger name="com.bj58.spat.wmedia.apps.wmediaclient.cmd.wtable.AbstractWtableCommand"-->
            <!--level="DEBUG" additivity="false" >-->
        <!--<appender-ref ref="APP_MSG" />-->
    <!--</logger>-->

    <root level="DEBUG">
        <appender-ref ref="STDOUT_LOG" />
    </root>
</configuration>
